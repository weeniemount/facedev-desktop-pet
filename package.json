{
  "name": "facedev-desktop-pet",
  "version": "1.0.0",
  "description": "this is something",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win",
    "build:dir": "electron-builder build --win --dir"
  },
  "author": ["weenie", "UsernameThis"],
  "license": "ISC",
  "dependencies": {
    "say": "^0.16.0"
  },
  "devDependencies": {
    "electron": "^15.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.weenieusernamethis.facedevdesktoppet",
    "productName": "FaceDev Desktop Pet",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/icons/desktoppet.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
